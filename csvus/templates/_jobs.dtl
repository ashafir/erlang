<!DOCTYPE html>
<html lang="en">

  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Bootstrap 101 Template</title>

    <!-- Bootstrap -->
    <link href="css/bootstrap.min.css" rel="stylesheet">
    <link href="css/custom.css" rel="stylesheet">
    <!-- datetimepicker -->
    <link rel="stylesheet" href="css/bootstrap-datetimepicker.min.css">

    <!-- jQuery (necessary for Bootstrap's JavaScript plugins) -->
    <script src="js/jquery-1.11.2.min.js"></script>
    <!-- Include all compiled plugins (below),
         or include individual files as needed -->
    <script src="js/bootstrap.min.js"></script>
    <!-- datepicker -->
    <script src="js/moment.min.js"></script>
    <script src="js/bootstrap-datetimepicker.min.js"></script>

    <!-- HTML5 shim and Respond.js for IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
      <script src="https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js"></script>
      <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->
  </head>

  <body>
    <div class="container-fluid">
      <form class="form-inline">

        <div class="row" style="margin: 10px">
          <small>

          <div class="form-group col-md-3 text-center">
            <label for="action" class="control-label">Showing</label>
            <select class="form-control input-xs" name="action" id="action">
              <option value="all">All Action Types</option>
              <option value="import">Imports</option>
              <option value="allexports">All Exports</option>
              <option value="invoice">Invoices</option>
              <option value="payment">Payments</option>
              <option value="document">Documents</option>
              <option value="invoicerejection">Invoice Rejections</option>
            </select>
            <script>
              $("#action").val("{{parm.action}}");
            </script>
          </div>

          <div class="form-group col-md-3 text-center">
            <label for="action" class="control-label">With status</label>
            <select class="form-control input-xs" name="status" id="status">
              <option selected value="all">All</option>
              <option value="pending">Pending</option>
              <option value="error">Error</option>
              <option value="complete">Complete</option>
              <option value="downloaded">Downloaded</option>
            </select>
            <script>
              $("#status").val("{{parm.status}}");
            </script>
          </div>

          <div class="form-group col-md-3 text-center">
            <label for="date1" class="control-label">From</label>
            <input type="text" class="form-control input-xs"
                   id="date1" name="date1"
                   placeholder="From date" size=7
                   style="background: whitesmoke">
            <script>
              $(function () {
              $('#date1').datetimepicker({
                format: 'MM/DD/YYYY',
                defaultDate: '{{parm.date1}}'
              });
              });
            </script>
          </div>

          <div class="form-group col-md-3 text-center">
            <label for="date2" class="control-label">To</label>
            <input type="text" class="form-control input-xs"
                   id="date2" name="date2"
                   placeholder="To date" size=7
                   style="background: whitesmoke">
            <script>
              $(function () {
              $('#date2').datetimepicker({
                format: 'MM/DD/YYYY',
                defaultDate: '{{parm.date2}}'
              });
              });
            </script>
          </div>

          </small>
        </div>

        <div class="row" style="margin: 10px">
          <small>

            <div class="form-group col-md-3 text-center">
              <label for="project" class="control-label">In project number
              </label>
              <input type="text" class="form-control input-xs"
                     id="project" name="project" value="{{parm.project}}"
                     placeholder="Project number">
            </div>

            <div class="form-group col-md-3 text-center">
              <label for="draw" class="control-label">in draw number
              </label>
              <input type="text" class="form-control input-xs"
                     id="draw" name="draw" value="{{parm.draw}}"
                     placeholder="Draw number">
            </div>

            <div class="form-group col-md-3 text-center">
              <label for="user" class="control-label">generated by user
              </label>
              <input type="text" class="form-control input-xs"
                     id="user" name="user" value="{{parm.user}}"
                     placeholder="User name">
            </div>

            <div class="form-group col-md-3 text-center">
              <label for="org" class="control-label">in organization named
              </label>
              <input type="text" class="form-control input-xs"
                     id="org" name="org" value="{{parm.org}}"
                     placeholder="Organization name">
            </div>

          </small>
        </div>

        <div class="row" style="margin: 10px">
          <small>

            <div class="form-group col-md-3 col-md-offset-3 text-center">
              <label for="nrec" class="control-label">Display
              </label>
              <input type="number" class="form-control input-xs"
                     id="nrec" name="nrec"
                     min=0 max=100 value={{parm.nrec}}
                     style="text-align: center; padding: 0px 0px">
              records per page
            </div>

            <div class="col-md-3 text-center">
              <input type="submit" value="Filter records"
                     class="btn btn-primary input-xs"
                     style="text-align: center; padding: 0px 5px">
            </div>

          </small>
        </div>

        <div class="row">
          <div class="col-md-1" style="background: gray">.col-md-1</div>
          <div class="col-md-1" style="background: silver">.col-md-1</div>
          <div class="col-md-1" style="background: gray">.col-md-1</div>
          <div class="col-md-1" style="background: silver">.col-md-1</div>
          <div class="col-md-1" style="background: gray">.col-md-1</div>
          <div class="col-md-1" style="background: silver">.col-md-1</div>
          <div class="col-md-1" style="background: gray">.col-md-1</div>
          <div class="col-md-1" style="background: silver">.col-md-1</div>
          <div class="col-md-1" style="background: gray">.col-md-1</div>
          <div class="col-md-1" style="background: silver">.col-md-1</div>
          <div class="col-md-1" style="background: gray">.col-md-1</div>
          <div class="col-md-1" style="background: silver">.col-md-1</div>
        </div>

      </form>
    </div>
    {% for job in rows %}
    <li>{{ job.jobid }}</li>
    {% endfor %}
  </body>
</html>
